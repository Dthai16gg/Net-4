@model Web_Application.Models.Product

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <h6 class="card-subtitle">Shopping Now</h6>
            <div class="row mt-3">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="/image/@Model.Image" class="img-responsive" width="430" height="600"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">@Model.Style</h4>
                    <p>@Model.Description</p>
                    <h2 class="mt-5">
                        $@Model.Price<small class="text-success">(30%off)</small>
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <i class="fa fa-shopping-cart"></i>
                    </button>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <i class="fa fa-heart"></i>
                    </button>
                    <button class="btn btn-primary btn-rounded">Buy Now</button>
                    <h3 class="box-title mt-5">More Details</h3>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-check text-success"></i>Quantity  : @Model.AvailableQuantity </li>
                        @if (@Model.Status > 1)
                        {
                            <li><i class="fa fa-check text-success"></i>Status : Cái này có status Lớn hơn 1</li>
                        }
                        else
                        {
                            <li><i class="fa fa-check text-success"></i>Status : Cái này có status Nhỏ hơn 1</li>

                        }
                        <li><i class="fa fa-check text-success"></i>Supplier : @Model.Supplier</li>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Brand</td>
                                    <td>@Model.Style</td>
                                </tr>
                                <tr>
                                    <td>Status</td>
                                    
                                    @if (@Model.Status ==1)
                                    {
                                        <td>Knock Down up</td>
                                    }
                                    else
                                    {
                                        <td>Knock Down</td>
                                    }
                                </tr>
                                <tr>
                                    <td>Seat Lock Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Type</td>
                                    <td>Office Chair</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>