<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Application.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/e56307bebd.js"
            crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="offcanvas offcanvas-start w-25 " tabindex="-1" id="offcanvas" data-bs-keyboard="false" data-bs-backdrop="false">
            <div class="offcanvas-header">
                <h4 class="d-none d-sm-block">Menu</h4>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body px-0">
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-start">
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-house mx-2 float-start" style="font-size: 20px"></i><span>Home</span></a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="ShowListProduct"><i class="fa-brands fa-product-hunt mx-2" style="font-size: 20px"></i>Admin</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TransferData"><i class="fa-solid fa-cart-shopping mx-2" style="font-size: 20px"></i>Orders</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Categories">
                            <i class="fa-solid fa-shirt mx-2" style="font-size: 20px"></i>Category
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link text-dark">
                            <i class="fa-solid fa-circle-info mx-2 " style="font-size: 20px"></i>About
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container-fluid fixed-top  bg-opacity-75" style="height: 75px;background-color: #1c2331" >
            <div class="row">
                <div class="col-1">
                    <!-- toggler -->
                    <button class="btn float-start mt-3 mx-3 " data-bs-toggle="offcanvas" data-bs-target="#offcanvas" role="button">
                        <i style="font-size: 30px" class="fa-solid fa-bars text-white" data-bs-toggle="offcanvas" data-bs-target="#offcanvas"></i>
                    </button>
                </div>
                <div class="col-5">
                    <marquee class="text-white mt-4"> Welcome back User,..</marquee>
                </div>
                <div class="col-4 ">
                    <!-- toggler -->
                    @using (Html.BeginForm("GetProductsByName", "Products", FormMethod.Post))
                    {
                        @Html.TextBox("name");
                        <button type="submit" class="btn_search mt-3"><span><i class="fa-solid fa-search text-danger"></i></span></button>
                    }
                </div>
                <div class="col-2">
                    <button class="btn mt-2"><i class="fa-regular fa-heart text-danger" style="font-size: 25px"></i></button>
                    <button class="btn mt-2" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-regular fa-user text-danger" style="font-size: 25px"></i></button>
                    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdown">
                        <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="MyAccount">My Account</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Details</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item"  asp-area="" asp-controller="User" asp-action="Login">Sign out</a></li>
                    </ul>
                    <button class="btn mt-2 "><i class="fa-regular fa-cart-shopping text-danger" style="font-size: 35px"></i></button>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid" style="margin-top:100px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Remove the container if you want to extend the Footer to full width. -->
    <!-- Footer -->
    <footer class="text-center text-lg-start text-white"
            style="background-color: #1c2331">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-between p-4"
                 style="background-color: #6351ce">
            <!-- Left -->
            <div class="me-5">
                <span>Get connected with us on social networks:</span>
            </div>
            <!-- Left -->
            <!-- Right -->
            <div>
                <a href="" class="text-white me-4">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold">Company name</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>
                            Here you can use rows and columns to organize your footer
                            content. Lorem ipsum dolor sit amet, consectetur adipisicing
                            elit.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Products</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>
                            <a href="#!" class="text-white">MDBootstrap</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">MDWordPress</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">BrandFlow</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Bootstrap Angular</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Useful links</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>
                            <a href="#!" class="text-white">Your Account</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Become an Affiliate</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Shipping Rates</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Help</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Contact</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p><i class="fas fa-home mr-3"></i> New York, NY 10012, US</p>
                        <p><i class="fas fa-envelope mr-3"></i> info@example.com</p>
                        <p><i class="fas fa-phone mr-3"></i> + 01 234 567 88</p>
                        <p><i class="fas fa-print mr-3"></i> + 01 234 567 89</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-3"
             style="background-color: rgba(0, 0, 0, 0.2)">
            © 2020 Copyright:
            <a class="text-white" href="https://mdbootstrap.com/">MDBootstrap.com</a>
        </div>
        <!-- Copyright -->
    </footer>
<!-- Footer -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script src="	https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
